<!-- form to update restaurant -->
<h2>Edit {{restaurant.name}} </h2>
<form action="/restaurants/{{restaurant._id}}?_method=put" method="post">
  <label>Name: </label>
  <input type="text" name="name" value="{{restaurant.name}}">
  <input type="submit">
</form>

<!-- form to delete restaurant -->
<form action="/restaurants/{{../restaurant._id}}?_method=delete" method="post">
  <input type="submit" value="Shut em down">
</form>
