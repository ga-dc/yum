<h2>MenuItems for {{restuarant.name}}</h2>
<div>

  <!-- iterates through each reminder that belong to this restuarant -->
  {{#each restuarant.menuItems}}
    <div class="menuItems-show-each">
      <p>{{body}}</p>
      <!-- form to delete a reminder from this restuarant (route and controller action not defined yet)-->
      <form method="post" action="/restuarants/{{../restuarant._id}}/menuItems/{{_id}}?_method=delete">
          <input type="submit" value="Done!">
      </form>
    </div>
  {{/each}}
</div>

<div id="reminder-new">
  <h3>New MenuItem</h3>
  <!-- form to create a reminder from this restuarant (route and controller action not defined yet)-->
  <form action="/restuarants/{{restuarant._id}}/menuItems" method="post">
    <label>Body</label>
    <input type="text" name="body">
    <input type="submit">
  </form>
</div>


<div id="restuarant-edit">
  <!-- link to edit this restuarant (route and controller action not defined yet)-->
  <a href="/restuarants/{{restuarant._id}}/edit">Edit Restaurant</a>
  <a href="/restuarants">Back</a>
</div>
